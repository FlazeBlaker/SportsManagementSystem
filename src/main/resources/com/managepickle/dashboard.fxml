<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.managepickle.controller.MainController"
           styleClass="root"
           prefHeight="720.0" prefWidth="1280.0">

    <BorderPane>
        <!-- Sidebar -->
        <!-- Top Navbar -->
        <top>
            <HBox styleClass="navbar" spacing="20" alignment="CENTER_LEFT" prefHeight="80" style="-fx-padding: 0 30;">
                <Label fx:id="brandLabel" text="ManagePickle" styleClass="label-title" style="-fx-padding: 0 40 0 0; -fx-font-size: 28px;"/>
                
                <HBox spacing="10" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <Button text="Dashboard" onAction="#showDashboard"/>
                    <Button text="Bookings" onAction="#showBookings"/>
                    <Button text="Members" onAction="#showMembers"/>
                    <Button text="POS" onAction="#showPOS"/>
                </HBox>

                <Button fx:id="settingsButton" text="Settings" onAction="#showSettings" styleClass="button-secondary"/>
            </HBox>
        </top>

        <!-- Main Content -->
        <center>
            <StackPane fx:id="contentArea" style="-fx-padding: 30;"/>
        </center>
    </BorderPane>

    <!-- Modal Overlay -->
    <StackPane fx:id="modalContainer" visible="false" style="-fx-background-color: rgba(0,0,0,0.4); -fx-alignment: center;">
        <!-- Modal content will be added here dynamically -->
    </StackPane>

</StackPane>
